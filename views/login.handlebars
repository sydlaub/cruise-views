<div class="row justify-space-between-md">
    <div class="login-card container">
        <h2 class="title">Login</h2>

        <form class="form login-form">
            <div class="form-group">
                <label for="email-login">Email:</label>
                <p class="control has-icons-left has-icons-right">
                    <input class="input is-rounded" type="email" id="email-login" placeholder="Email" />
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </p>
            </div>


            <div class="form-group">
                <label for="password-login">Password:</label>
                <p class="control has-icons-left has-icons-right">
                    <input class="input is-rounded" type="password" id="password-login" placeholder="Password" />
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </p>
            </div>

            <div class="form-group">
                <button id="login-btn" class="button is-danger" type="submit">Login</button>
            </div>
        </form>
    </div>



    <div class="login-card container">
        <h2 class="title">Sign Up</h2>
        <form class="form signup-form">


            <div class="form-group">
                <label for="email-signup">Email:</label>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                        <input class="input is-rounded" type="email" id="email-signup" placeholder="Email" />
                        <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                        </span>
                        <span class="icon is-small is-right">
                            <i class="fas fa-check"></i>
                        </span>
                    </p>
                </div>
            </div>



            <div class="form-group">
                <label for="password-signup">Password:</label>
                <p class="control has-icons-left has-icons-right">
                    <input class="input is-rounded" type="password" id="password-signup" placeholder="Password" />
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </p>
            </div>
            <div class="form-group">
                <button id="sign-up-btn" class="button is-link" type="submit">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>