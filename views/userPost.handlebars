<div class="field">
    <label class="label">Title</label>
    <div class="control has-icons-left has-icons-right">
        <input class="input is-success" type="text" placeholder="Text input" value="" id="post-title">
        <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
        </span>
        <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
        </span>
    </div>
</div>



<div class="field">
    <label class="label">What are your thoughts on the subject?</label>
    <div class="control">
        <textarea class="textarea" placeholder="Textarea" id="post-body"></textarea>
    </div>
</div>

<div class="field is-grouped">
    <div class="control">
        <button class="button is-link" id="post-submit">Post</button>
    </div>
    <div class="control">
        <button class="button is-link is-light">Cancel</button>
    </div>
</div>


<script src="/js/add-entry.js"></script>

<script src="/js/post.js"></script>
